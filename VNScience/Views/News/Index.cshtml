@model PagedList.IPagedList<VNScience.Models.Core.Post>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWithoutAds.cshtml";

}

@foreach (var item in Model)
{
    <div class="col-md-12 mb-30">
        <h4 class="p-title" style="margin-bottom: 10px"><i class="fa fa-newspaper-o"></i> <a href="/tin-hoat-dong/@item.MetaTitle-@item.Id"><b>@item.Title</b></a></h4>
        <div class="row">
            <div class="col-md-2">
                <img src="@item.CoverImage" alt="Alternate Text" />
            </div>
            <div class="col-md-10">
                @item.Summary
            </div>
        </div>
    </div>
}

    <div class="col-md-12">
        @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }), PagedListRenderOptions.TwitterBootstrapPagerAligned)

    </div>
@section page_header {
    <section class="ptb-0">
        <div class="mb-30 brdr-ash-1 opacty-5"></div>
        <div class="container">
            <a class="mt-10" href="/"><i class="mr-5 ion-ios-home"></i>Trang chủ<i class="mlr-10 ion-chevron-right"></i></a>
            <a class="mt-10 color-ash" href="04_FAQs.html">Tin tức - hoạt động</a>
        </div><!-- container -->
    </section>
}
