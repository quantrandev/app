@model VNScience.Models.Core.Recruitment
    @using  VNScience.Common
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutWithoutAds.cshtml";
}

<div class="col-md-12 col-lg-8">
    <h3><b>@Model.Title</b></h3>
    <ul class="list-li-mr-20 mtb-15">
        <li><i class="fa fa-clock-o"></i> @DateTimeHelper.FormatDate(Model.CreatedAt.Value)</li>
        @*<li><i class="color-primary mr-5 font-12 ion-chatbubbles"></i>30</li>*@
    </ul>

    <div class="content-container">
        <ul class="recruitment">
            <li>
                <b>Vị trí tuyển: </b>
                @Model.JobTitle
            </li>
            <li>
                <b>Số lượng: </b>
                @Model.Quantity
            </li>
            <li>
                <b>Noi làm việc: </b>
                @Model.JobWorkPlace
            </li>
            <li>
                <b>Mô tả công việc: </b>
                @Html.Raw(Model.JobDescription)
            </li>
            <li>
                <b>Yêu cầu công việc: </b>
                @Html.Raw(Model.JobRequirements)
            </li>
            <li>
                <b>Chế độ: </b>
                @Html.Raw(Model.JobWelfare)
            </li>
            @if (Model.JobAdditionalInfo != null)
            {
                <li>
                    <b>Thông tin khác: </b>
                    @Model.JobAdditionalInfo
                </li>
            }
                <li>
                    <b>Thông tin liên hệ: </b>
                    @Html.Raw(ViewBag.RecruitmentInfo)
                </li>
        </ul>
    </div>
</div>

@section page_header {
    <section class="ptb-0">
        <div class="mb-30 brdr-ash-1 opacty-5"></div>
        <div class="container">
            <a class="mt-10" href="/"><i class="mr-5 ion-ios-home"></i>Trang chủ<i class="mlr-10 ion-chevron-right"></i></a>
            <a class="mt-10 color-ash" href="/tin-hoat-dong">Tuyển dụng<i class="mlr-10 ion-chevron-right"></i></a>
            <a class="mt-10 color-ash" href="/">@Model.Title</a>
        </div><!-- container -->
    </section>
}

