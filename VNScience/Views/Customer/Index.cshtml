@model IEnumerable<VNScience.Models.Core.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWithoutAds.cshtml";
}

@foreach (var item in Model)
{
    <div class="col-md-12 mb-30">
        <h4 class="p-title" style="margin-bottom: 10px"><i class="fa fa-newspaper-o"></i> <a href="//@item.Homepage"><b>@item.Name</b></a></h4>
        <div class="row">
            <div class="col-md-2">
                <img src="@item.CoverImage" alt="Alternate Text" />
            </div>
            <div class="col-md-10">
                @Html.Raw(item.Description)
            </div>
        </div>
    </div>
}

@section page_header {
    <section class="ptb-0">
        <div class="mb-30 brdr-ash-1 opacty-5"></div>
        <div class="container">
            <a class="mt-10" href="/"><i class="mr-5 ion-ios-home"></i>Trang chủ<i class="mlr-10 ion-chevron-right"></i></a>
            <a class="mt-10 color-ash" href="/">Đối tác - khách hàng</a>
        </div><!-- container -->
    </section>
}