@model VNScience.Models.Core.ProductCategory
@using VNScience.Common
@{
    ViewBag.Title = "ProductChildren";
    Layout = "~/Views/Shared/_LayoutWithoutAds.cshtml";
}

<div class="col-sm-12 col-md-12">
    <div class="row">
        @foreach (var product in Model.Children)
        {
            <div class="col-md-12 mb-30">
                <h4 class="p-title" style="margin-bottom: 10px"><i class="fa fa-newspaper-o"></i> <a href="/san-pham-giai-phap/@StringHelper.ToUnsignString(product.Name).ToLower()-@product.Id"><b>@product.Name</b></a></h4>
                <div class="row">
                    <div class="col-md-2">
                        <img src="@product.CoverImage" alt="Alternate Text" />
                    </div>
                    <div class="col-md-10">
                        @Html.Raw(product.Description.Substring(0, product.Description.IndexOf("</p>")))
                    </div>
                </div>
            </div>
        }

    </div>
</div>

@section page_header {
    <section class="ptb-0">
        <div class="mb-30 brdr-ash-1 opacty-5"></div>
        <div class="container">
            <a class="mt-10" href="/"><i class="mr-5 ion-ios-home"></i>Trang chủ<i class="mlr-10 ion-chevron-right"></i></a>
            <a class="mt-10 color-ash" href="">Sản phẩm - giải pháp<i class="mlr-10 ion-chevron-right"></i></a>
            <a class="mt-10 color-ash" href="">@Model.Name</a>
        </div><!-- container -->
    </section>
}