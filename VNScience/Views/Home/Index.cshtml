@using VNScience.Models.Core
@using VNScience.Common
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWithoutAds.cshtml";
    var slides = (List<Slide>)ViewBag.Slides;
    var products = (List<ProductCategory>)ViewBag.Products;
    var posts = (List<Post>)ViewBag.Posts;
    var customers = (List<Customer>)ViewBag.Customers;
}

<div class="col-md-12 mb-30">
    <div class="slides-container">
        @foreach (var slide in slides)
        {
            <div><a href="@slide.Link" target="@slide.Target"><img src="@slide.Content" alt="Alternate Text" /></a></div>
        }
    </div>
</div>

<div class="col-md-12" style="margin-bottom: 100px;">
    <h4 class="text-center big-title">SẢN PHẨM - GIẢI PHÁP</h4>
    <hr />
    <div>
        @foreach (var product in products)
        {
            <div class="h-200x pr-5 pr-sm-0 pt-5 float-left float-sm-none pos-relative w-1-3 w-sm-100 h-100 h-sm-300x">
                <a class="pos-relative h-100 dplay-block" href="/san-pham/@StringHelper.ToUnsignString(product.Name).ToLower()-@product.Id">

                    <div class="img-bg bg-4 bg-grad-layer-6" style="background-image: url(@product.CoverImage); background-size: cover;"></div>

                    <div class="abs-blr color-white p-20 bg-sm-color-7">
                        <h4 class="mb-10 mb-sm-5"><b>@product.Name</b></h4>
                    </div><!--abs-blr -->
                </a><!-- pos-relative -->
            </div>
        }
        <!-- w-1-3 -->
    </div>
</div>

<div class="col-md-12" style="margin-bottom: 100px;">
    <h4 class="text-center big-title">TIN HOẠT ĐỘNG</h4>
    <hr />
    <div class="row posts-container">

        @foreach (var post in posts)
        {
            <div class="col-sm-3">
                <img src="@post.CoverImage" alt="">
                <h4 class="pt-20 font-9"><a href="/tin-hoat-dong/@post.MetaTitle-@post.Id">@post.Title</a></h4>
                @*<ul class="list-li-mr-20 pt-10 mb-30">
                        <li class="color-lite-black">
                            by <a href="#" class="color-black"><b>Olivia Capzallo,</b></a>
                            Jan 25, 2018
                        </li>
                        <li><i class="color-primary mr-5 font-12 ion-ios-bolt"></i>30,190</li>
                        <li><i class="color-primary mr-5 font-12 ion-chatbubbles"></i>47</li>
                    </ul>*@
            </div>
        }

    </div>
</div>

<div class="col-md-12">
    <h4 class="text-center big-title">ĐỐI TÁC - KHÁCH HÀNG</h4>
    <hr />
    <div class="row customers-container">

        @foreach (var customer in customers)
        {
            <div class="col-sm-3">
                <img src="@customer.CoverImage" alt="" style="max-width: 100px; height: 100px">
                <h4 class="pt-20 font-9"><a href="@customer.Homepage">@customer.Name</a></h4>
                @*<ul class="list-li-mr-20 pt-10 mb-30">
                        <li class="color-lite-black">
                            by <a href="#" class="color-black"><b>Olivia Capzallo,</b></a>
                            Jan 25, 2018
                        </li>
                        <li><i class="color-primary mr-5 font-12 ion-ios-bolt"></i>30,190</li>
                        <li><i class="color-primary mr-5 font-12 ion-chatbubbles"></i>47</li>
                    </ul>*@
            </div>
        }

    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $('.slides-container').slick({
                dots: true,
                infinite: true,
                speed: 300,
                slidesToShow: 1,
                adaptiveHeight: true
            });

            $('.posts-container').slick({
                dots: true,
                infinite: true,
                speed: 300,
                slidesToShow: 4,
                slidesToScroll: 4,
                adaptiveHeight: true
            });

            $('.customers-container').slick({
                dots: true,
                infinite: true,
                speed: 300,
                slidesToShow: 5,
                slidesToScroll: 5,
                adaptiveHeight: true
            });
        });
    </script>
}